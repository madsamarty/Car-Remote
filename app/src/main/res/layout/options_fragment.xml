<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:id="@+id/trunk">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trunk"
                android:textSize="28sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_car_bag"
                android:layout_gravity="center|end"
                android:layout_margin="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:id="@+id/warning">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning"
                android:textSize="28sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_warning"
                android:layout_gravity="center|end"
                android:layout_margin="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:id="@+id/lights">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lights"
                android:textSize="28sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_car_lights"
                android:layout_gravity="center|end"
                android:layout_margin="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:id="@+id/side_mirrors">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Side Mirrors"
                android:textSize="28sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_car_side_mirror"
                android:layout_gravity="center|end"
                android:layout_margin="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:id="@+id/air_conditioner">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Conditioner"
                android:textSize="28sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_air_conditioner"
                android:layout_gravity="center|end"
                android:layout_margin="15dp"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>